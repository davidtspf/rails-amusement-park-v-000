<h3>Create a User</h3>

<%= form_for(@user) do |f| %>
  <label>Email:</label><br>
  <%= f.text_field :email %><br>
  <label>Name:</label><br>
  <%= f.text_field :name %><br>
  <label>Password:</label><br>
  <%= f.text_field :password %><br>
  <label>Happiness:</label><br>
  <%= f.number_field :happiness %><br>
  <label>Nausea:</label><br>
  <%= f.number_field :nausea %><br>
  <label>Height:</label><br>
  <%= f.number_field :height %><br>
  <label>Tickets:</label><br>
  <%= f.number_field :tickets %><br>
  <label>Admin?:</label>
  <%= f.check_box :admin %><br>


  <%= f.submit 'Create User' %>
<% end %>
