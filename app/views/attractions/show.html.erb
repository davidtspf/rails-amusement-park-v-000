<p><%= @attraction.name %></p>

<%= form_tag(rides_path) do %>
  <%= hidden_field_tag :attraction_id, @attraction.id %>
  <%= hidden_field_tag :user_id, @user.id %>
  <%= submit_tag "Go on this ride" %>
<% end %>

<p><%= link_to "Edit Attraction", edit_attraction_path(@attraction.id) if @user.admin %></p>
